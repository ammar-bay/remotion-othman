{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts).
    "rootDir": "./src",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
